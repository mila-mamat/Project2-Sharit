{{!-- background img  --}}
<section id="bg">
  <img src="./img/ballons.jpg" id="hero-bg" />
</section>

{{!-- slogan on top of the posts --}}
<section class="section is-size-2 has-text-white has-text-weight-bold has-text-centered slogan">
  Life is beautiful
  <br />
  Share It !
</section>



{{!-- start of main contents  --}}
<section id="main-content">
  {{!-- create new post form  --}}
  <div class="notification">
    <form class="field" id="post-from" enctype="multipart/form-data">
      {{!-- post text  --}}
      <textarea class="textarea is-small" placeholder="What would you like to share?" id="post-text">
      </textarea>
      <div class="buttons">
        <input type="reset">
        <input type="submit" id="reset">
        {{!-- post img  --}}
        <div>
          <label for="files" class="btn"><i class="far fa-image"></i></label>
          <input id="files" style="display:none" type="file">
        </div>
        <div id="selected-img"></div>
      </div>
    </form>
  </div>




  {{!-- display posts  --}}
  <div class="grid">
    {{!-- grid-sizer required for the masonry working --}}
    <div class="grid-sizer"></div>




    {{#each posts}}

    <div class="grid-item">
      <div class="card">
        <header class="card-header">
          <a class="card-header-title author is-flex" href="/" target="_blank" id="user-ID">
            {{!--HERE: add link to the authors avatar in the href--}}
            <figure class="avatar image is-32x32">
              <img class="is-rounded"
                src="https://pbs.twimg.com/profile_images/663874141854961666/HXz-_UA4_normal.jpg" />
            </figure>


            <div class="author-name">
              {{dataValues.User.dataValues.username}}
            </div>
          </a>

          {{!--HERE: get post modified data from database         //need to format it --}}
          <time class="post-date">{{dataValues.createdAt}}</time>
        </header>

        <div class="card-content">
          <div class="content">
            {{dataValues.text}}



            {{!--HERE: get post post photo from database, if exists--}}
            {{#if dataValues.post_photo}}
            <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/82/one-world-trade.jpg" />

            {{/if}}
          </div>
        </div>
        <footer class="card-footer">
          <a href="" class="card-footer-item"><i class="far fa-heart"></i></a>
          <a href="" class="card-footer-item"><i class="far fa-comment"></i></a>
          {{!-- leads to user profile page  --}}
          <a href="api/users/{{dataValues.UserId}}" target="_blank" class="card-footer-item"><i
              class="far fa-user-circle"></i></a>
        </footer>
      </div>
    </div>

    {{/each}}





  </div> {{!-- end of grid container--}}
</section>

{{!-- link to css file  --}}
<link rel="stylesheet" href="./stylesheets/home.css" />

