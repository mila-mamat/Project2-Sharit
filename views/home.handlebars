  Life is beautiful
  <br />
  Share It !
</section>

{{!-- posts  --}}

<section id="main-content">
  {{!-- add post form  --}}
  <div class="notification">
    <form class="field" id="post-from">
      <textarea class="textarea is-small" placeholder="What would you like to share?" id="post-text"></textarea>
      <div class="buttons">

        {{!-- adding img from folder --}}
        <label for="file">
          <i class="far fa-image"></i>
          <input type="file" id="file" style="display: none" name="image"
            accept="image/gif,image/jpeg,image/jpg,image/png" multiple="" data-original-title="upload photos">
        </label>

        <input type="reset">
        <input type="submit">

      </div>
    </form>
  </div>




  {{!-- display posts  --}}
  <div class="grid">
    {{!-- grid-sizer required for the masonry working --}}
    <div class="grid-sizer"></div>




    {{#each posts}}


    <div class="grid-item">
      <div class="card">
        <header class="card-header">
