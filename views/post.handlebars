{{!-- start of main contents  --}}
<section id="main-content">

    <div class="card">
        <header class="card-header">
            <a class="card-header-title author is-flex" href="/profile/{{post.dataValues.User.dataValues.username}}" id="user-ID">

                <figure class="avatar image is-32x32">
                    <img class="is-rounded" src="{{post.dataValues.User.dataValues.profile_photo}}" alt="profile photo">
                </figure>
                <div class="author-name">
                    {{post.dataValues.User.dataValues.username}}
                </div>
            </a>


            <time class="post-date" >{{post.dataValues.createdAt}}</time>
           
        </header>

        <div class="card-content">
            <div class="content image is-128x128">
                {{post.dataValues.text}}
                {{#if post.dataValues.post_photo}}
                <img src="{{post.dataValues.post_photo}}" alt="post photo" >
                {{/if}}
            </div>
        </div>
        <footer class="card-footer">
            <a href="" class="card-footer-item"><i class="far fa-heart"> {{dataValues.likeNum}}</i></a>
            {{!-- leads to user profile page  --}}
            <a href="/profile/{{post.dataValues.User.dataValues.username}}" class="card-footer-item"><i
                    class="far fa-user-circle"></i></a>
        </footer>
    </div>


